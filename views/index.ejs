<%- include("partials/header") -%> 
        <section class="container-fluid">
            <div>
                <img src="images/weather.png" alt="Weather Icon" height="100rem" width="100rem">
            </div>
                <div class="heading mp">
                    <h1>The Weather App</h1>
                </div>
            <div class="form">
                <form action="/" method="post">
                    <div class="form-floating mp">
                        <input id="cityName" class="form-control" type="text" name="cityName" placeholder="city">
                        <label for="cityName">Enter City Name</label>
                    </div>
                    <div class="radio mp">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="temp" id="celcius" value="celcius" checked>
                            <label class="form-check-label" for="celcius">Celcius</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="temp" id="fahrenheit" value="fahrenheit">
                            <label class="form-check-label" for="fahrenheit">Fahrenheit</label>
                        </div>
                    </div>
                    <button class="btn btn-lg btn-info mp" type="submit">Go!</button>
                </form>
            </div>
        </section>   
<%- include("partials/footer") -%> 